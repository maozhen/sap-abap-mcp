{
  "name": "sap-abap-mcp-server",
  "version": "1.0.0",
  "description": "SAP ABAP MCP Server for Cline AI - Comprehensive ABAP development support including DDIC, Programs, CDS, OData, and Testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:debug": "node --inspect=9229 dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration:report": "npx ts-node scripts/test-report-read-write.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "sap",
    "abap",
    "mcp",
    "model-context-protocol",
    "cline",
    "adt",
    "cds",
    "odata"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "fast-xml-parser": "^4.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
